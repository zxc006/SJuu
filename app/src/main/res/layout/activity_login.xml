<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_FFFFFF"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="18dp"
            android:layout_height="?attr/actionBarSize"
            android:layout_marginTop="25dp">

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:layout_marginStart="@dimen/dp_10"
                android:src="@drawable/ic_xxxx" />
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_user_plcs"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/app_icon" />

        <TextView
            android:id="@+id/textid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:text="嗨,欢迎回来"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textids"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="20dp"
            android:text="请登录"
            android:textColor="@color/black"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="12dp"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/user_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/iv_user"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="5dp"
                android:background="@color/ghostWhite"
                android:hint="请输入账号"
                android:paddingLeft="18dp"
                android:textColor="@color/gray_999"
                android:textSize="12dp" />

            <EditText
                android:id="@+id/et_verify"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:visibility="gone"
                android:layout_marginBottom="5dp"
                android:background="@color/ghostWhite"
                android:hint="请输入验证码"
                android:paddingLeft="18dp"
                android:textColor="@color/gray_999"
                android:textSize="12dp" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp">

                <EditText
                    android:id="@+id/iv_pass"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/ghostWhite"
                    android:hint="请输入密码"
                    android:paddingStart="18dp"
                    android:textColor="@color/gray_999"
                    android:textSize="12dp"
                    tools:ignore="MissingConstraints,SpUsage" />

                <!--找回密码-->
      <!--          <TextView
                    android:id="@+id/tvForget"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="6dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/bg_day"
                    android:paddingStart="10dp"
                    android:paddingTop="2dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="2dp"
                    android:text="找回密码"
                    android:textColor="@color/white"
                    android:textSize="12dp"
                    app:layout_constraintBottom_toBottomOf="@+id/iv_pass"
                    app:layout_constraintEnd_toEndOf="@id/iv_pass" />-->

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

       <!-- <LinearLayout
            android:id="@+id/iv_checkUserXy"
            android:layout_width="match_parent"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:layout_height="wrap_content">

            <CheckBox
                android:id="@+id/checkUserXy"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/sele_user_xieyi"
                android:button="@null"
                android:checked="false" />

            <TextView
                android:id="@+id/tv_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="15dp"
                android:ellipsize="end"
                android:lineSpacingExtra="5dp"
                android:maxLines="3"
                android:singleLine="false"
                android:text="我已阅读并同意《服务条款》《隐私权政策》【平台申明】未注册的用户将自动注册平台账号"
                android:textColor="#99000000"
                android:textSize="12sp" />
        </LinearLayout>-->

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/ivs_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            tools:ignore="RtlHardcoded">

            <Button
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:background="@drawable/dkplayer_shape_status_view_btn"
                android:text="登录"
                android:textColor="@color/white"
                android:textSize="13sp" />

            <Button
                android:visibility="gone"
                android:id="@+id/btn_reg"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:background="@drawable/dkplayer_shape_status_view_btn"
                android:text="立即注册"
                android:textColor="@color/white"
                android:textSize="13sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="RtlHardcoded">

            <TextView
                android:visibility="gone"
                android:id="@+id/iv_btn_login"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginRight="58dp"
                android:gravity="right|center"
                android:text="推荐"
                android:textColor="@color/lightSteelBlue"
                android:textSize="12sp" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/tv_send"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginLeft="32dp"
            android:visibility="gone"
            android:layout_marginRight="32dp"
            android:background="@drawable/dkplayer_shape_status_view_btn"
            android:text="获取验证码"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/iv_btn_login1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="@color/azure" />

        <TextView
            android:id="@+id/switch_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册账号"
            android:textColor="@color/dimGray"
            android:textSize="15sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="@color/azure" />

    </LinearLayout>
</LinearLayout>