<?xml version="1.0" encoding="utf-8"?>
<com.lihang.ShadowLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:hl_cornerRadius_leftTop="6dp"
    app:hl_cornerRadius_rightTop="6dp"
    app:hl_layoutBackground="@color/bg_popup">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/filterRoot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="200dp"
            android:layout_gravity="bottom"
            android:orientation="vertical"
            android:padding="@dimen/dp_20"
            android:layout_marginTop="10dp">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="30dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_reset"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="36dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                app:cornerRadius="20dp"
                android:textColor="@color/text_gray"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_marginRight="20dp"
                android:text="重置"
                android:layout_marginBottom="14dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_confirm"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="36dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                app:cornerRadius="20dp"
                android:textColor="@color/white"
                android:text="筛选"
                android:stateListAnimator="@null"
                android:layout_marginBottom="14dp"/>
        </LinearLayout>
    </LinearLayout>

</com.lihang.ShadowLayout>