<?xml version="1.0" encoding="utf-8"?>
<com.lihang.ShadowLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sl"
    android:layout_marginTop="8dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:hl_bindTextView="@+id/filterValue"
    app:hl_cornerRadius="@dimen/common_corners"
    app:hl_layoutBackground="@android:color/transparent"
    app:hl_layoutBackground_true="@color/colorPrimary"
    app:hl_shapeMode="selected"
    app:hl_textColor="@color/text_gray"
    app:hl_textColor_true="#fff">

    <TextView
        android:id="@+id/filterValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_5"
        android:ellipsize="end"
        android:focusable="true"
        android:gravity="center_vertical"
        android:paddingHorizontal="6dp"
        android:singleLine="true"
        tools:text="中国大陆"
        android:textColor="@color/text_gray" />
</com.lihang.ShadowLayout>